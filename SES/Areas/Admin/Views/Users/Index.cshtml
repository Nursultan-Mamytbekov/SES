@model IEnumerable<SES.Data.Entities.User>

@{
    ViewData["Title"] = "Admin Page";
}

<div class="container">
    <div class="row">
        <div class="col col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayName("Пользователь")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => item.UserName)</td>
                            <td><a asp-area="Admin" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@item.Id" class="btn btn-success">изменить пароль</a></td>
                        </tr> 
                    } 
                </tbody>
            </table>
        </div>
    </div>
</div>
