@model SES.Models.PinRequestModel

@{
    ViewData["Title"] = "GetInformation";
}

<div class="container">
    <h4>Информация о пенсии</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form id="GetPensionForm" asp-action="GetInformation">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Pin" class="control-label"></label>
                    <input asp-for="Pin" class="form-control" />
                    <span asp-validation-for="Pin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" id="GetPensionBtn" class="btn btn-primary">Запросить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#GetPensionBtn").click(function () {
                var myForm = $("#GetPensionForm")
                if (myForm) {
                    $(this).prop("disabled", true);
                    $(myForm).submit();
                    $(this).html(
                        `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> обработка`
                    );
                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
