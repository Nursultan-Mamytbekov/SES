@model SES.Models.CodeForPermissionModel

@{
    ViewData["Title"] = "SendCodeForPermission";
}


<div class="container">
    <h4>Форма подтверждения разрешения </h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SendCodeForPermission">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RequestId" class="control-label"></label>
                    <input asp-for="RequestId" class="form-control" />
                    <span asp-validation-for="RequestId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Запросить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Назад</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
